{
  "name": "naps-backend",
  "version": "2.0.0",
  "description": "Backend API for NAPS (Navigate and Plan Smartly) - Complete Trading & Finance Platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage --watchAll=false",
    "test:watch": "jest --watch",
    "test:performance": "jest tests/performance.test.js --runInBand",
    "test:load": "k6 run tests/load.js",
    "test:load:stress": "k6 run tests/load.js --scenario stress_test",
    "test:load:constant": "k6 run tests/load.js --scenario constant_load",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "seed": "node scripts/seedDatabase.js",
    "migrate": "node scripts/migrate.js",
    "build": "echo 'No build step required'",
    "heroku-postbuild": "echo 'No build step required'",
    "test:coverage": "jest --coverage",
    "test:websocket": "jest src/tests/websocket.test.js",
    "test:all": "npm run test && npm run test:websocket && npm run test:load"
  },
  "keywords": [
    "express",
    "nodejs",
    "api",
    "mongoose",
    "jwt",
    "naps",
    "trading",
    "finance",
    "stocks",
    "portfolio",
    "market-data",
    "real-time",
    "websocket"
  ],
  "author": "NAPS Finance Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@stripe/react-stripe-js": "^3.7.0",
    "@stripe/stripe-js": "^7.3.0",
    "argon2": "^0.40.1",
    "axios": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "date-fns": "^3.0.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.12.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "openai": "^4.20.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "rate-limit-redis": "^3.0.2",
    "redis": "^5.1.0",
    "socket.io": "^4.7.2",
    "stripe": "^14.9.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "validatorjs": "^3.22.1",
    "winston": "^3.11.0",
    "ws": "^8.14.2",
    "yahoo-finance2": "^2.11.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "socket.io-client": "^4.7.2",
    "ioredis-mock": "^8.9.0",
    "k6": "^0.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nikitayk/NAPS-PERSONAL-BACKENED.git"
  },
  "bugs": {
    "url": "https://github.com/nikitayk/NAPS-PERSONAL-BACKENED/issues"
  },
  "homepage": "https://github.com/nikitayk/NAPS-PERSONAL-BACKENED#readme",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/**",
      "!src/middlewares/**",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "testTimeout": 10000
  }
}
